<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken%>" method="POST" enctype="multipart/form-data">
  <section id="product-item">
    <p>
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="<%= product.title%>" required />
    </p>
    <div id="image-upload-control">
      <p>
        <label for="image">Image</label>
        <input type="file" name="image" id="image" accept="image/jpg, image/jpeg, image/png" <% if(imageRequired) { %>required<% } %>/>
      </p>
      <img id="image-preview" alt="Your picked image." src="<%= product.imageUrl%>">
    </div>
    <p>
      <label for="summary">Summary</label>
      <input type="text" name="summary" id="summary" value="<%= product.summary%>" maxlength="250" required />
    </p>
    <p>
      <label for="price">Price</label>
      <input type="number" name="price" id="price" value="<%= product.price%>" step="0.01" min="0.01" max="999999" required />
    </p>
    <p>
      <label for="description">Description</label>
      <textarea name="description" id="description" rows="7"><%= product.description %></textarea>
    </p>
    <p>
      <button type="reset" class="btn btn-alt">Reset</button>
      <button type="submit" class="btn">Save</button>
    </p>
  </section>
</form>
