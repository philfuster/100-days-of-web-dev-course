<%- include('../includes/head.ejs', { title: 'Your Cart' }) %>
<meta name="csrf-token", content="<%= csrfToken%>">
<link rel="stylesheet" href="/styles/customer/cart.css">
<script src="/scripts/cart.js" defer></script>
</head>
<body>
  <%-include('../includes/header.ejs') %>
  <main>
    <% if (orders.length < 1) { %>
      <h1>No Orders Placed.</h1>
      <p><a href="/products">Continue Shopping</a> or <a href="/cart">Continue to checkout.</a></p>
    <% } else { %>

      <section id="orders">
        <% for (const order of orders) { %>
          <section class="order">
            <div class="order-summary">
              <p><span class="order-price" ><%= order.totalPrice %></span> - <span class="order-date"><%= order.date %></span></p>
              <span class="order-status"><%= order.status %></span>
            </div>
            <div class="order-detail">
              <ul>
                <% for(const item of order.items) { %>
                  <li>
                    <span class="item-name"><%= item.name %></span>
                    -
                    <span class="item-total-price"><%= item.totalPrice%></span>
                    <span class="item-unit-price"><%= item.price %> x <%= item.quantity %></span>
                  </li>
                <% } %>
              </ul>
            </div>
          </section>
        <% } %>
      </section>
      <section id="cart">
        <h1>Your Cart</h1>
        <% for (const item of cartData.items) { %>
          <div class="cart-item" id="cart-item-<%= item.id%>">
            <div class="cart-item-info">
              <p id="product-name"><%= item.name %></p>
              <p><span id="product-total-price-<%= item.id %>"><%= item.formattedTotalPrice %></span> <em class="unit-price">(<%= item.formattedPrice%>)</em></p>
            </div>
            <div class="cart-item-actions">
              <input type="number" id="product-quantity-<%= item.id%>" data-productid="<%= item.id %>" value="<%= item.quantity %>" min="1" max="99">
              <div>
                <input class="update-btn" id="update-btn-<%= item.id %>" type="submit" data-productid="<%= item.id %>" value="Update" disabled>
                <input class="delete-btn" type="submit" data-productid="<%= item.id %>" value="Delete">
              </div>
            </div>
          </div>
        <% } %>
      </section>
      <section id="totals">
        <p>Total: <span id="cart-total-price"><%= cartData.totalPrice%></span></p>
        <% if (locals.isAuth) { %>
          <form action="/cart/checkout" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn btn-primary">Buy Products</button>
          </form>
        <% } else { %>
          <a href="/login">Log in to proceed and purchase the items.</a>
        <% } %>
      </section>
    <% } %>
  </main>
</body>
</html>
