<%- include('../../shared/includes/head.ejs', { title: 'Signup' }) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%-include('../../shared/includes/header.ejs') %>
  <main>
    <h1>Create New Account</h1>
    <%-include("../../shared/includes/input-error.ejs", { hasError: inputData.hasError, message: inputData.message }) %>
    <form action="/signup" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken%>" />
      <p>
        <label for="email">E-mail</label>
        <input type="email" name="email" id="email" value="<%= inputData.email %>" required />
      </p>
      <p>
        <label for="confirmEmail">Confirm E-mail</label>
      <input type="email" name="confirmEmail" id="confirmEmail" value="<%= inputData.confirmEmail %>" required />
      </p>
      <p>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" value="<%= inputData.password %>" minlength="6" required />
      </p>
      <hr />
      <p>
        <label for="name">Full Name</label>
        <input type="text" name="name" id="name" value="<%= inputData.name %>" required />
      </p>
      <p>
        <label for="address">Street</label>
        <input type="text" name="address" id="address" value="<%= inputData.address %>" required />
      </p>
      <p>
        <label for="postalCode">Postal Code</label>
        <input
          type="text"
          name="postalCode"
          id="postalCode"
          value="<%= inputData.postalCode %>"
          minlength="5"
          maxlength="5"
          required
        />
      </p>
      <p>
        <label for="city">City</label>
        <input type="text" name="city" id="city" value="<%= inputData.city %>" required />
      </p>
      <button class="btn">Create Account</button>
      <p id="swith-form">
        <a href="/login">Login instead</a>
      </p>
    </form>
  </main>
</body>
