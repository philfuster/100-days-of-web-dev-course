<%- include('../includes/head.ejs', { title: 'Your Cart' }) %>
<link rel="stylesheet" href="/styles/customer/cart.css">
</head>
<body>
  <%-include('../includes/header.ejs') %>
  <main>
    <h1>Your Cart</h1>
    <section id="cart">
      <% for (const item of cartData.items) { %>
        <div class="cart-item">
          <div class="cart-item-info">
            <p id="product-name"><%= item.name %></p>
            <p><%= item.formattedTotalPrice %> <em class="unit-price">(<%= item.formattedPrice%>)</em></p>
          </div>
          <div class="cart-item-actions">
            <input type="number" id="product-quantity" value="<%= item.quantity %>">
            <button class="btn btn-secondary">Update</button>
          </div>
        </div>
      <% } %>
    </section>
    <section id="totals">
      <p>Total: <%= cartData.cartTotalPrice%></p>
      <% if (locals.isAuth) { %>
        <button>Buy Products</button>
      <% } else { %>
        <a href="/login">Log in to proceed and purchase the items.</a>
      <% } %>
    </section>
  </main>
</body>
</html>
