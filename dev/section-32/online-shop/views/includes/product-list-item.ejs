<div class="product-list-item">
  <img src="/images/<%= product.image %>.jpg" alt="<%= product.alt %>" />
  <div class="product-list-item-detail">
    <h3><%= product.name %></h3>
    <form action="/products/<%= product.id %>" method="GET">
      <button class="btn">View Detail</button>
    </form>
  </div>
</div>
